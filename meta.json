{
  "module_id": "viam-labs:speech",
  "visibility": "public",
  "url": "https://github.com/viam-labs/speech",
  "description": "speech is a modular service that provides text-to-speech (TTS) and speech-to-text(STT) capabilities for machines running on the Viam platform.",
  "models": [
    {
      "api": "viam-labs:service:speech",
      "model": "viam-labs:speech:speechio",
      "markdown_link": "README.md#configure-your-speech-service",
      "short_description": "Provides text-to-speech (TTS) and speech-to-text(STT) capabilities"
    },
    {
      "api": "rdk:service:discovery",
      "model": "viam-labs:speech:discover-mics",
      "markdown_link": "README.md#configure-the-discovery-service",
      "short_description": "Find all available microphones to use for speech-to-text services"
    }
  ],
  "build": {
    "build": "sh build.sh",
    "path": "dist/archive.tar.gz",
    "arch": [
      "linux/arm64",
      "linux/amd64",
      "darwin/arm64"
    ]
  },
  "entrypoint": "dist/main"
}
